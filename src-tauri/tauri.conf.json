{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "focus-coffee",
  "version": "0.1.0",
  "identifier": "com.kavis.focus-coffee",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "focus-coffee",
        "width": 370,
        "height": 600,
        "alwaysOnTop": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  }
}
