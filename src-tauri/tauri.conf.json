{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "focus-coffee",
  "version": "0.1.0",
  "identifier": "com.kavis.focus-coffee",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "focus-coffee",
        "width": 500,
        "height": 600,
        "alwaysOnTop": true,
        "transparent": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/coffee.png",
      "icons/coffee.ico"
    ]
  }
}
